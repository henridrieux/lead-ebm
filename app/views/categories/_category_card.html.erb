<div class="col">
  <div class="category-card card-style">
    <% if category.photo.attached? %>
      <div class="category-card-image" style="background-image: url('<%= cl_image_path category.photo.key, crop: :fill %>')"></div>
    <% end %>
    <%= link_to category_path(category) do %>
      <h4><%= category.name %></h4>
    <% end %>
    <div class="category-description">
      <p> <small><%= category.description %></small> </p>
    </div>
    <% if category.event_categories.count > 0 %>
      <div class="category-link">
        <%= link_to category_path(category) do %>
          <% nb_cat_abo = category.subscriptions.where(user: current_user).count %>
          <%= category.event_categories.count - nb_cat_abo %> abonnements disponibles
          <i class="fas fa-arrow-right"></i>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
