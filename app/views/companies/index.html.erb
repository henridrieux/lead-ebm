<div class="container">
  <h1>Companies#index</h1>
  <h2>Rechercher et sélectionner la profession qui vous intéresse<h2>
</div>

<!-- search-form-control -->

<div class="container">
  <%= simple_form_for :query, url: companies_path, method: :get do |f| %>
  <div class="row justify-content-center">
    <div class="">
      <input class="string required" placeholder="Essayer 'Notaire','avocat', 'recrutement'..." type="text" name="query" id="query" value="<%= params[:query] %>"/>
        <button name="button" type="submit" class="rounded-pill btn btn-danger">
          <i class="fas fa-search"></i>  Chercher
        </button>
    </div>
  </div>
  <% end %>
</div>

