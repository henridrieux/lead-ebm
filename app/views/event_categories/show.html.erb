<div class="header-top">
  <div class="container">
    <h1> <%= @event_category.title %></h1>
  </div>
</div>
<br>
<div class="container">
  <div class="leads-list">
    <% if false %>
      <% @recruitments.each do |recruitment| %>
        <%= render partial: 'event_categories/lead_recruit_card', locals: {recruitment: recruitment} %>
      <% end %>
    <% else %>
      <% @leads.each do |lead| %>
        <%= render partial: 'event_categories/lead_company_card', locals: {lead: lead, event:@event_category.event } %>
      <% end %>
    <% end %>
  </div>
</div>

