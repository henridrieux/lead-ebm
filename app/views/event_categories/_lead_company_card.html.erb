<div class="card-lead mt-2">
  <div class="card-lead-top">
    <div class="card-lead-contact mr-0">
        <div class="flex-vert">
          <%= lead.company_name %>
        </div>
        <div class="tag-event ml-1">
          <%= lead.category.name %>
        </div>
    </div>
    <div class="card-lead-event">
      <div class="tag-event">
        <%= event.title %>
      </div>
    </div>
  </div>
  <div class="card-lead-details">
    <div class="card-lead-contact mr-0">
      <p>
        <i class="fas fa-building"></i>
        <small><%= lead.address %> - <%= lead.city %> <%= lead.zip_code %></small>
      </p>
      <p>
        <i class="fas fa-user-friends mr-2"> </i>
        <small><%= lead.head_count %> - <%= lead.legal_structure %></small>
      </p>
    </div>
    <div class="card-lead-event">
      <div class="card-lead-date">
        <% if lead.creation_date %>
          <!-- <i class="fas fa-play mr-2"></i> -->
          <small>Créée le <%= lead.creation_date.strftime("%d/%m/%Y") %></small>
        <% end %>
      </div>
      <div class="card-lead-recruitments">
          <% if lead.recruitments %>
            <% lead.recruitments.order(publication_date: :desc).each do |recruitment| %>
              <p>
                <i class="fas fa-file-contract mr-2"></i>
                <small><%= recruitment.job_title %> (<%= recruitment.contract_type %>)</small>
              </p>
            <% end %>
          <% end %>
      </div>
    </div>
  </div>
</div>
